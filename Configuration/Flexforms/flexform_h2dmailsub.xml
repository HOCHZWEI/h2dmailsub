<T3DataStructure>
    <sheets>
        <sDEF>
            <ROOT>
                <TCEforms>
                    <sheetTitle>Function</sheetTitle>
                </TCEforms>
                <type>array</type>
                <el>
                    <switchableControllerActions>
                        <TCEforms>
                            <label>LLL:EXT:h2dmailsub/Resources/Private/Language/locallang_be.xlf:flexform.view</label>
                            <config>
                                <type>select</type>
                                <items>
                                    <numIndex index="0">
                                        <numIndex index="0">Subscribe</numIndex>
                                        <numIndex index="1">Address->subscribe;Address->saveSubscription;Address->confirmSubscription</numIndex>
                                    </numIndex>
                                    <numIndex index="1">
                                        <numIndex index="0">Unsubscribe</numIndex>
                                        <numIndex index="1">Address->unsubscribe;Address->requestUnsubscribe;Address->removeSubscription</numIndex>
                                    </numIndex>
                                </items>
                            </config>
                        </TCEforms>
                    </switchableControllerActions>

                    <!-- Settings -->
                    <settings.notification.senderEmail>
                        <TCEforms>
                            <label>LLL:EXT:h2dmailsub/Resources/Private/Language/locallang_be.xlf:flexform.notification.senderEmail</label>
                            <config>
                                <type>input</type>
                                <size>15</size>
                            </config>
                        </TCEforms>
                    </settings.notification.senderEmail>
                    <settings.notification.senderName>
                        <TCEforms>
                            <label>LLL:EXT:h2dmailsub/Resources/Private/Language/locallang_be.xlf:flexform.notification.senderName</label>
                            <config>
                                <type>input</type>
                                <size>15</size>
                            </config>
                        </TCEforms>
                    </settings.notification.senderName>
                </el>
            </ROOT>
        </sDEF>
    </sheets>
</T3DataStructure>